<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Configure <%= guild.name %> - Bot Control Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center">
                    <a href="/dashboard" class="mr-4"><i class="fas fa-arrow-left"></i></a>
                    <i class="fab fa-discord text-blue-500 mr-2"></i>
                    <span class="font-bold"><%= guild.name %></span>
                </div>
                <div class="flex items-center">
                    <span class="mr-4"><%= user.username %>#<%= user.discriminator %></span>
                    <a href="/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded text-sm">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <form id="config-form" class="space-y-8">
            <input type="hidden" name="guildId" value="<%= guild.id %>">

            <!-- Logging Settings -->
            <div class="bg-gray-800 rounded-lg p-6">
                <h2 class="text-2xl font-bold mb-4 flex items-center">
                    <i class="fas fa-list-alt mr-2 text-blue-500"></i>
                    Logging Settings
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium mb-2">Main Log Channel</label>
                        <input type="text" name="logChannelId" value="<%= config.logChannelId || '' %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="Channel ID">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Message Log Channel</label>
                        <input type="text" name="logChannels.message" value="<%= config.logChannels?.message || '' %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="Channel ID">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Voice Log Channel</label>
                        <input type="text" name="logChannels.voice" value="<%= config.logChannels?.voice || '' %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="Channel ID">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Members Log Channel</label>
                        <input type="text" name="logChannels.members" value="<%= config.logChannels?.members || '' %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="Channel ID">
                    </div>
                </div>

                <div class="mt-4">
                    <label class="flex items-center">
                        <input type="checkbox" name="logs.message" <%= config.logs?.message ? 'checked' : '' %>
                               class="mr-2">
                        Enable Message Logging
                    </label>
                    <label class="flex items-center mt-2">
                        <input type="checkbox" name="logs.voice" <%= config.logs?.voice ? 'checked' : '' %>
                               class="mr-2">
                        Enable Voice Logging
                    </label>
                    <label class="flex items-center mt-2">
                        <input type="checkbox" name="logs.members" <%= config.logs?.members ? 'checked' : '' %>
                               class="mr-2">
                        Enable Member Logging
                    </label>
                    <label class="flex items-center mt-2">
                        <input type="checkbox" name="logs.channels" <%= config.logs?.channels ? 'checked' : '' %>
                               class="mr-2">
                        Enable Channel Logging
                    </label>
                    <label class="flex items-center mt-2">
                        <input type="checkbox" name="logs.roles" <%= config.logs?.roles ? 'checked' : '' %>
                               class="mr-2">
                        Enable Role Logging
                    </label>
                    <label class="flex items-center mt-2">
                        <input type="checkbox" name="logs.invites" <%= config.logs?.invites ? 'checked' : '' %>
                               class="mr-2">
                        Enable Invite Logging
                    </label>
                    <label class="flex items-center mt-2">
                        <input type="checkbox" name="logs.emojis" <%= config.logs?.emojis ? 'checked' : '' %>
                               class="mr-2">
                        Enable Emoji Logging
                    </label>
                </div>
            </div>

            <!-- Auto-Role Settings -->
            <div class="bg-gray-800 rounded-lg p-6">
                <h2 class="text-2xl font-bold mb-4 flex items-center">
                    <i class="fas fa-user-plus mr-2 text-green-500"></i>
                    Auto-Role Settings
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium mb-2">Auto-Role ID</label>
                        <input type="text" name="autoRoleId" value="<%= config.autoRoleId || '' %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="Role ID">
                    </div>
                </div>
            </div>

            <!-- Onboarding Settings -->
            <div class="bg-gray-800 rounded-lg p-6">
                <h2 class="text-2xl font-bold mb-4 flex items-center">
                    <i class="fas fa-handshake mr-2 text-yellow-500"></i>
                    Onboarding Settings
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium mb-2">Onboarding Channel ID</label>
                        <input type="text" name="onboardConfig.channelId" value="<%= config.onboardConfig?.channelId || '' %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="Channel ID">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Message Delay (seconds)</label>
                        <input type="number" name="onboardConfig.seconds" value="<%= config.onboardConfig?.seconds || 3 %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" min="1" max="300">
                    </div>
                </div>

                <div class="mt-4">
                    <label class="block text-sm font-medium mb-2">Welcome Message</label>
                    <textarea name="onboardConfig.message" rows="3"
                              class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="{user} joined!"><%= config.onboardConfig?.message || '{user}' %></textarea>
                    <p class="text-sm text-gray-400 mt-1">Use {user} to mention the new member</p>
                </div>
            </div>

            <!-- Support Settings -->
            <div class="bg-gray-800 rounded-lg p-6">
                <h2 class="text-2xl font-bold mb-4 flex items-center">
                    <i class="fas fa-headset mr-2 text-purple-500"></i>
                    Support Settings
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium mb-2">Support Role ID</label>
                        <input type="text" name="supportRoleId" value="<%= config.supportRoleId || '' %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="Role ID">
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-2">Archive Category ID</label>
                        <input type="text" name="archiveCategoryId" value="<%= config.archiveCategoryId || '' %>"
                               class="w-full bg-gray-700 border border-gray-600 rounded px-3 py-2" placeholder="Category ID">
                    </div>
                </div>
            </div>

            <!-- Save Button -->
            <div class="text-center">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg transition duration-300">
                    <i class="fas fa-save mr-2"></i>
                    Save Configuration
                </button>
            </div>
        </form>
    </div>

    <script>
        document.getElementById('config-form').addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData(e.target);
            const config = {};

            // Parse form data
            for (let [key, value] of formData.entries()) {
                if (value === '') continue;

                const keys = key.split('.');
                let current = config;

                for (let i = 0; i < keys.length - 1; i++) {
                    if (!current[keys[i]]) current[keys[i]] = {};
                    current = current[keys[i]];
                }

                if (value === 'on') {
                    current[keys[keys.length - 1]] = true;
                } else {
                    current[keys[keys.length - 1]] = value;
                }
            }

            try {
                const response = await fetch(`/api/guild/${config.guildId}/config`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(config),
                });

                if (response.ok) {
                    alert('Configuration saved successfully!');
                } else {
                    alert('Error saving configuration.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error saving configuration.');
            }
        });
    </script>
</body>
</html>