<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Bot Control Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <nav class="bg-gray-800 border-b border-gray-700">
        <div class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <div class="flex items-center">
                    <i class="fab fa-discord text-blue-500 mr-2"></i>
                    <span class="font-bold">Bot Control Panel</span>
                </div>
                <div class="flex items-center">
                    <span class="mr-4">Welcome, <%= user.username %>#<%= user.discriminator %></span>
                    <a href="/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded text-sm">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8">Your Servers</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="guilds-container">
            <!-- Guilds will be loaded here -->
        </div>
    </div>

    <script>
        const user = <%- JSON.stringify(user) %>;

        async function loadGuilds() {
            try {
                const response = await fetch('/api/user/guilds');
                const guilds = await response.json();

                const container = document.getElementById('guilds-container');

                if (guilds.length === 0) {
                    container.innerHTML = '<p class="text-gray-400">No servers found where you have admin permissions.</p>';
                    return;
                }

                container.innerHTML = guilds.map(guild => `
                    <div class="bg-gray-800 rounded-lg p-6 hover:bg-gray-700 transition duration-300">
                        <div class="flex items-center mb-4">
                            ${guild.icon ? `<img src="https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}.png" class="w-12 h-12 rounded-full mr-4" alt="${guild.name}">` : '<div class="w-12 h-12 rounded-full bg-gray-600 mr-4 flex items-center justify-center"><i class="fas fa-server"></i></div>'}
                            <div>
                                <h3 class="font-bold text-lg">${guild.name}</h3>
                                <p class="text-gray-400 text-sm">${guild.memberCount} members</p>
                            </div>
                        </div>
                        <a href="/guild/${guild.id}" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300 inline-block text-center">
                            Manage Server
                        </a>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error loading guilds:', error);
                document.getElementById('guilds-container').innerHTML = '<p class="text-red-400">Error loading servers. Please try again.</p>';
            }
        }

        loadGuilds();
    </script>
</body>
</html>